#!/usr/bin/env python
import ftplib
import os
import subprocess

# Directories
prefix = os.path.abspath('toolchain')
folders = {
    'tardir': os.path.join(prefix, 'tarball'),
    'srcdir': os.path.join(prefix, 'src'),
    'objdir': os.path.join(prefix, 'obj'),
    'builddir': os.path.join(prefix, 'build')
}

packages = [
    {
        'name': 'gcc',
        'version': '8.3.0',
        'uri' : 'gcc/gcc-8.3.0',
        'format': 'xz'
    },
    {
        'name': 'gmp',
        'version': '6.1.2',
        'uri' : 'gmp'
        'format': 'xz'
    },
    {
        'name': 'm4',
        'version': '1.4.18',
        'uri' : 'm4'
        'format': 'xz'
    },
    {
        'name': 'mpc',
        'version': '1.1.0',
        'uri' : 'mpc',
        'format': 'gz'
    },
    {
        'name': 'mpfr',
        'version': '4.0.2',
        'uri' : 'mpfr'
        'format': 'xz'
    }
]


# Mirrors
gnu_mirror='ftp.gnu.org'

def create_folders():
    for name, path in folders.items():
        if not os.path.exists(path):
            os.makedirs(path)

def download_sources():
    ftp = ftplib.FTP(gnu_mirror)
    ftp.login()
